#!/usr/bin/env ruby
require 'engineyard/cli'

begin
  EY::CLI.start
rescue SocketError => e
  EY.ui.error("Cannot connect, perhaps there is a network error. Quitting...")
rescue EY::Error => e
  EY.ui.print_exception(e)
  exit(1)
rescue Interrupt => e
  puts
  EY.ui.print_exception(e)
  EY.ui.say("Quitting...")
  exit(1)
end
