#!/usr/bin/env ruby
require 'rubygems' rescue LoadError nil
$LOAD_PATH.unshift File.expand_path("../../lib", __FILE__)
require 'engineyard/cli'

args = ARGV.dup

begin
  EY::CLI.command_to_class(args.shift).run(args)
rescue EY::CLI::CommandNotFound
  EY::CLI.usage
  exit(1)
rescue EY::CLI::Exit => e
  puts "Sorry, something went wrong."
  exit(e.code)
end
