#!/usr/bin/env ruby

$LOAD_PATH.unshift(File.dirname(__FILE__) + '/../lib')
require 'vendor/gems/environment'

require 'engineyard'
require 'engineyard/cli'

args = ARGV.dup

begin
  EY::CLI.command_to_class(args.shift).run(args)
rescue EY::CLI::CommandNotFound
  EY::CLI.usage
  exit(1)
rescue EY::CLI::Exit => e
  puts "Sorry, something went wrong."
  exit(e.code)
end
